<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:id="@+id/rl_layout"
    tools:context=".AddMovieActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="25sp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:letterSpacing="0.5"
        android:padding="5dp"
        android:text="Add Movie"
        android:textAllCaps="true"
        android:textColor="@color/accent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="25sp"
        android:layout_marginTop="30sp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/accent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/movieName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/poppins"
                android:hint="Movie Name"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="@color/dark"
                android:textColorHint="@color/dark" />

            <TextView
                android:id="@+id/production_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_marginTop="25sp"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/poppins"
                android:text="Production Year"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:textColor="@color/dark" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_marginTop="25sp"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/poppins"
                android:text="Date"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:textColor="@color/dark" />

            <TextView
                android:id="@+id/registeredTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_marginTop="25sp"
                android:fontFamily="@font/poppins"
                android:text="Category *"
                android:textColor="@color/accent"
                android:textSize="14sp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/categoryChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_marginTop="10sp"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/kidsChip"
                    style="@style/Theme.CinemaApp.ChipsColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:fontFamily="@font/poppins"
                    android:focusable="true"
                    android:text="Kids"
                    android:textSize="16sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/actionChip"
                    style="@style/Theme.CinemaApp.ChipsColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:fontFamily="@font/poppins"
                    android:focusable="true"
                    android:text="Action"
                    android:textSize="16sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/scifiChip"
                    style="@style/Theme.CinemaApp.ChipsColor"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Science Fiction"
                    android:textSize="16sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/animationChip"
                    style="@style/Theme.CinemaApp.ChipsColor"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Animation"
                    android:textSize="16sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/familyChip"
                    style="@style/Theme.CinemaApp.ChipsColor"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Family"
                    android:textSize="16sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/comedyChip"
                    style="@style/Theme.CinemaApp.ChipsColor"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Comedy"
                    android:textSize="16sp" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_marginTop="25sp"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/poppins"
                android:text="time"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:textColor="@color/dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_marginTop="25sp"
                android:fontFamily="@font/poppins"
                android:text="Suitable Age *"
                android:textColor="@color/accent"
                android:textSize="14sp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/ageChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_marginTop="10sp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/plus3Chip"
                    style="@style/Theme.CinemaApp.ChipsColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:fontFamily="@font/poppins"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="+3"
                    android:textSize="16sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/plus6Chip"
                    style="@style/Theme.CinemaApp.ChipsColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:fontFamily="@font/poppins"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="+6"
                    android:textSize="16sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/plus13Chip"
                    style="@style/Theme.CinemaApp.ChipsColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:fontFamily="@font/poppins"
                    android:focusable="true"
                    android:text="+13"
                    android:textSize="16sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/plus16Chip"
                    style="@style/Theme.CinemaApp.ChipsColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:fontFamily="@font/poppins"
                    android:focusable="true"
                    android:text="+16"
                    android:textSize="16sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/plus18Chip"
                    style="@style/Theme.CinemaApp.ChipsColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:fontFamily="@font/poppins"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="+18"
                    android:textSize="16sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/allChip"
                    style="@style/Theme.CinemaApp.ChipsColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:clickable="true"
                    android:fontFamily="@font/poppins"
                    android:focusable="true"
                    android:text="All"
                    android:textSize="16sp" />

            </com.google.android.material.chip.ChipGroup>

            <EditText
                android:id="@+id/movieDirector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_marginTop="25sp"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/poppins"
                android:hint="Movie Director"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="@color/dark"
                android:textColorHint="@color/dark" />

            <EditText
                android:id="@+id/movieWriter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"
                android:layout_marginTop="25sp"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/poppins"
                android:hint="Movie Writer"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="@color/dark"
                android:textColorHint="@color/dark" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/add_hall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="25sp"
                android:layout_marginBottom="25sp"
                app:cardBackgroundColor="@color/accent"
                app:cardCornerRadius="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add Movie"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:fontFamily="@font/poppins" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>